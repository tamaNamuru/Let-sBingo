doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    title 景品情報
    script(type='text/javascript', src='/javascripts/keihin_tl.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/keihin_joho.css')
  body
    #hako
      header
        .midashi
          h1
            span#b 景
            span#i 品
            span#n 登
            span#g 録
      form(method='post', action='insert', enctype="multipart/form-data")
        table#namuru(border='0')
          tr
            th
              input(type='button', value='追加', onclick='AddTable();')
            th
              input(type='submit', value='登録')
            th
              input(type='button', value='リセット', onclick='sakuzyo();')
        table#keihin(border='1', cellspacing='0', cellpadding='4')
          tbody#tb
            tr
              th 景品名
              th 景品の個数
              th 画像アドレス
              th 備考
              th 優先度
            each prize in prizes
              tr#tr1
                td.name
                  input(type='text', name='name', value= prize.name, size='10', maxlength='20')
                td.kazu
                  input(type='number', name='kazu', min='1', max='500', value= prize.count, step='1', required='')
                td.pic
                  input(type='hidden', name='url', value=prize.picture_url)
                  input(type='file', name='pic', accept="image/*", onchange='changePicture(this)')
                td.biko
                  input(type='text', name='biko', value= prize.description, size='10', maxlength='255')
                td.pri
                  input(type='number', name='pri', min='0', max='20', value= prize.priority, step='1', required='')
                td.dl
                  input(type='button', name='dl', value='削除', onclick='deleteRow(this)')
      br
      br
      input.btn1(type='button', value='戻る', onclick="location.href='/manage'")
      br